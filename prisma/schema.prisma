generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  @@map("users")
  name      String?
  email     String?  @unique
  password_hash  String?
  createdAt DateTime @default(now())
}

model Checkin {
  id        String   @id @default(uuid())
  @@map("check_ins")
  validatedAt DateTime?
  createdAt DateTime @default(now())
}
model Gym {
  id       String   @id @default(uuid())
  @@map("gyms")
  name      String?
  description String?
  phone     String?
  latitude  Decimal
  longitude Decimal
  createdAt DateTime @default(now())
}